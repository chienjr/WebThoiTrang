@model IEnumerable<Model.EF.MauSac>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="/Admin/Home">Trang chủ</a>
        <i class="icon-angle-right"></i>
    </li>
    <li>
        Sản phẩm
        <i class="icon-angle-right"></i>
    </li>
    <li><a href="#">Màu sắc</a></li>
</ul>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>Màu sắc</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>

        <div class="box-content">
            
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>
                            Tên Màu
                        </th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
{
    <tr id="row_@item.MaMau">
        <td>
            @Html.DisplayFor(modelItem => item.TenMau)
        </td>
        <td>
            <a class="btn btn-danger" data-ajax="true" data-ajax-complete="$('#row_@item.MaMau').remove()" data-ajax-confirm="Bạn có muốn xóa bản ghi này không?" data-ajax-method="Delete" href="/Admin/Color/Delete/@item.MaMau">
                <i class="halflings-icon white trash"></i> Xóa
            </a>
        </td>
    </tr>
}
                </tbody>
            </table>
            <a class="btn btn-success" href="@Url.Action("Create","Color")">
                <i class="halflings-icon white zoom-in"></i>Thêm mới
            </a>
        </div>
    </div><!--/span-->
</div><!--/row-->