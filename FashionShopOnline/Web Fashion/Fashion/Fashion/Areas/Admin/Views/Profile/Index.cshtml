@model Model.EF.QuanTriVien

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>Cài đặt Tài khoản Chung</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class='table table-striped table-bordered bootstrap-datatable '>
                <tbody>
                    @{
                        var session = (Fashion.Common.AdminLogin)Session["ADMIN_SESSION"];
                        if (session != null)
                        {
                            <tr>
                                <td>Họ tên</td>
                                <td>@session.Name</td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>@session.Email</td>
                            </tr>
                            <tr>
                                <td>Tài khoản</td>
                                <td>@session.UserName</td>
                            </tr>
                            <tr>
                                <td>Mật khẩu</td>
                                <td><a href="~/Admin/Profile/EditPassword/@session.AdminID">Thay đổi mật khẩu</a></td>
                            </tr>
                            <tr>
                                <td>Chức vụ</td>
                                @if(@session.Phanloai)
                                {
                                <td>Quản trị viên cao cấp</td>
                                }
                                else
                                {
                                <td>Quản trị viên</td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div><!--/span-->
</div>

