    <link rel="shortcut icon" href="~/Assets/Client/img/favicon.png">



</head>

<body>

    <!-- *** TOPBAR ***
    _________________________________________________________ -->
    <div id="top">
        @{
            int check = 0;
            var session = (Fashion.Common.UserLogin)Session["USER_SESSION"];
            <div class="container">
                <div class="col-md-6 offer" data-animate="fadeInDown">
                </div>
                <div class="col-md-6" data-animate="fadeInDown">
                            <ul class="menu">
                                @if (session != null)
                                {
                                    <li><a href="#" data-toggle="modal">Xin chào @session.Name</a></li>
                                    <li><a href="/Home/Logout" data-toggle="modal">Đăng xuất</a></li>
                                    <li><a href="/thong-tin-tai-khoan">Thông tin tài khoản</a></li>
                                    check = 1;
                                }
                                else
                                {
                                    <li>
                                        <a href="#" data-toggle="modal" data-target="#login-modal">Đăng nhập</a>
                                    </li>
                                    <li>
                                        <a href="/dang-ky">Đăng ký</a>
                                    </li>
                                    <li>
                                        <a href="/quen-mat-lhau">Quên mật khẩu</a>
                                    </li>
                                }
                            </ul>
                </div>
            </div>

            if (check == 0)
            {
                <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
                    <div class="modal-dialog modal-sm">

                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="Login">Đăng nhập</h4>
                            </div>
                            <div class="modal-body">
                                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                                {
                                    Html.ValidationSummary(true, "", new { @class = "text-danger" });
                                    <div class="form-group">
                                        <input type="text" id="name" name="name" class="form-control" autofocus="autofocus" placeholder="Tên đăng nhập" />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="password" name="password" class="form-control" placeholder="Mật khẩu" />
                                    </div>

                                    <p class="text-center">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i>Đăng nhập</button>
                                    </p>
                                }

                                <p class="text-center text-muted">Bạn chưa đăng ký?</p>
                                <p class="text-center text-muted"><a href="/dang-ky"><strong>Đăng ký ngay</strong></a>! Đăng ký đơn giản chỉ trong 1 phút và bạn có cơ hội nhận được rất nhiều ưu đãi!</p>

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- *** TOP BAR END *** -->
    <!-- *** NAVBAR ***
    _________________________________________________________ -->
    <!--/.navbar-header -->
    @{
        Html.RenderAction("NavBar", "Home");
    }
    <!--/.nav-collapse -->
    <!--/.nav-collapse -->
    <!-- /.container -->
    <!-- /#navbar -->
    <!-- *** NAVBAR END *** -->



    <div id="all">

        <div id="content">


            <div class="container">
                <div class="col-md-12">
                    @RenderSection("Slider", required: false)
                </div>
                <div class="col-md-9">

                    @RenderBody()
                    <!-- /#main-slider -->
                </div>
                <div class="col-md-3">
                    @RenderSection("Menu_Profile", required: false)
                    @RenderSection("Menu_Article", required: false)
                    @RenderSection("Menu_Category", required: false)
                </div>
            </div>

            <!-- *** ADVANTAGES HOMEPAGE ***
            _________________________________________________________ -->
            @RenderSection("Advantages", required: false)
            <!-- /#advantages -->
            <!-- *** ADVANTAGES END *** -->
            <!-- *** HOT PRODUCT SLIDESHOW ***
            _________________________________________________________ -->
            @RenderSection("Hot_Product", required: false)
            <!-- /#hot -->
            <!-- *** HOT END *** -->
            <!-- *** GET INSPIRED ***
            _________________________________________________________ -->
            @RenderSection("Inspired", required: false)
            <!-- *** GET INSPIRED END *** -->
            <!-- *** BLOG HOMEPAGE ***
            _________________________________________________________ -->
            @RenderSection("Article", required: false)
            <!-- /.container -->
            <!-- *** BLOG HOMEPAGE END *** -->


        </div>
        <!-- /#content -->
        <!-- *** FOOTER ***
        _________________________________________________________ -->
