@model IEnumerable<Model.EF.BinhLuan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="/Admin/Home">Trang chủ</a>
        <i class="icon-angle-right"></i>
    </li>
    <li><a href="#">Bình luận</a></li>
</ul>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>Bình luận</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>

        <div class="box-content">

            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Họ tên người bình luận</th>
                        <th>Ngày giờ</th>
                        <th>Nội dung</th>
                        <th>Tên sản phẩm</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
{
    <tr id="row_@item.MaBinhLuan">
        <td>
            @Html.DisplayFor(modelItem => item.HoTenNBL)
        </td>
        <td>@Html.DisplayFor(modelItem => item.NgayGio)</td>
        <td>@Html.DisplayFor(modelItem => item.NoiDung)</td>
        <td>@Html.DisplayFor(modelItem => item.SanPham.TenSP)</td>
        <td>@(item.TrangThai ? "Hiển thị" : "Ẩn")</td>
        <td>
            <a class="btn btn-info" href="~/Admin/Comment/Edit/@item.MaBinhLuan"><i class="halflings-icon white edit"></i>Sửa</a>
            <a class="btn btn-danger" data-ajax="true" data-ajax-complete="$('#row_@item.MaBinhLuan').remove()" data-ajax-confirm="Bạn có muốn xóa bản ghi này không?" data-ajax-method="Delete" href="/Admin/Comment/Delete/@item.MaBinhLuan">
                <i class="halflings-icon white trash"></i> Xóa
            </a>
        </td>
    </tr>
}
                </tbody>
            </table>
        </div>
    </div><!--/span-->
</div><!--/row-->