@model IEnumerable<Model.EF.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="/Admin/Home">Trang chủ</a>
        <i class="icon-angle-right"></i>
    </li>
    <li><a href="#">Khách hàng</a></li>
</ul>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>Khách hàng</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>

        <div class="box-content">

            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Tên khách hàng</th>
                        <th>Username</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Phân loại</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
{
    <tr id="row_@item.MaKhachHang">
        <td>@Html.DisplayFor(modelItem => item.TenKhachHang)</td>
        <td>@Html.DisplayFor(modelItem => item.TenDangNhap)</td>
        <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
        <td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>
        <td>@Html.DisplayFor(modelItem => item.Email)</td>
        <td>@(item.PhanLoai ? "Thành Viên" : "Vãng Lai")</td>
        <td>
            <a class="btn btn-info" href="~/Admin/Customer/Edit/@item.MaKhachHang"><i class="halflings-icon white edit"></i>Sửa</a>
            <a class="btn btn-danger" data-ajax="true" data-ajax-complete="$('#row_@item.MaKhachHang').remove()" data-ajax-confirm="Bạn có muốn xóa bản ghi này không?" data-ajax-method="Delete" href="/Admin/Customer/Delete/@item.MaKhachHang">
                <i class="halflings-icon white trash"></i> Xóa
            </a>
        </td>
    </tr>
}
                </tbody>
            </table>
        </div>
    </div><!--/span-->
</div><!--/row-->